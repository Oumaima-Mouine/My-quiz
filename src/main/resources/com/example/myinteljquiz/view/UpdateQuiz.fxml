<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane prefHeight="500.0" prefWidth="700.0" style="-fx-background-color: linear-gradient(to bottom, #1c4a74, #2c5d8b); -fx-padding: 20;" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.myinteljquiz.controller.Enseignant.UpdateQuizController">

    <!-- Main Container -->
    <VBox layoutX="50.0" layoutY="30.0" prefWidth="600.0" spacing="20" style="-fx-background-color: #ffffff; -fx-border-color: #1c4a74; -fx-border-width: 2; -fx-border-radius: 10; -fx-background-radius: 10; -fx-padding: 20;">

        <!-- Title Label -->
        <Label style="-fx-font-size: 22px; -fx-font-weight: bold; -fx-text-fill: #1c4a74; -fx-padding-bottom: 10;" text="Create a New Quiz" />

        <!-- Label and TextField for Quiz Name -->
        <Label style="-fx-font-size: 14px; -fx-font-weight: bold; -fx-text-fill: #1c4a74;" text="Quiz Name:" />
        <TextField fx:id="quizNameField" prefWidth="580.0" style="-fx-border-color: #1c4a74; -fx-border-radius: 5; -fx-background-radius: 5; -fx-padding: 5;" />

        <!-- Label and TextArea for Quiz Description -->
        <Label style="-fx-font-size: 14px; -fx-font-weight: bold; -fx-text-fill: #1c4a74;" text="Description:" />
        <TextArea fx:id="quizDescriptionArea" prefHeight="100.0" prefWidth="580.0" style="-fx-border-color: #1c4a74; -fx-border-radius: 5; -fx-background-radius: 5; -fx-padding: 5;" />

        <!-- Label and TextField for Quiz Time -->
        <Label style="-fx-font-size: 14px; -fx-font-weight: bold; -fx-text-fill: #1c4a74;" text="Time (in minutes):" />
        <TextField fx:id="quizTimeField" prefWidth="150.0" style="-fx-border-color: #1c4a74; -fx-border-radius: 5; -fx-background-radius: 5; -fx-padding: 5;" />

        <!-- Buttons Container -->
        <HBox alignment="center" spacing="20">
            <Button fx:id="cancelButton" onAction="#cancelOnAction" style="-fx-background-color: linear-gradient(to right, #fdeb00, #f9d100);                -fx-text-fill: #1c4a74;                -fx-font-weight: bold;                -fx-border-radius: 5;                -fx-background-radius: 5;                -fx-padding: 8 16;" text="Cancel" />

            <Button fx:id="updateButton" onAction="#onUpdateButtonAction" style="-fx-background-color: linear-gradient(to right, #1c4a74, #2c5d8b); -fx-text-fill: #ffffff; -fx-font-weight: bold; -fx-border-radius: 5; -fx-background-radius: 5; -fx-padding: 8 16;" text="Update" />
        </HBox>
    </VBox>

</AnchorPane>
